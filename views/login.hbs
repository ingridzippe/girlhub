{{#if error}}
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    {{error}}
  </div>
{{/if}}

<form method="POST">
<h3>Login</h3>
  <div class="form-group">
    <label>Email</label>
    <input id="input-box" type="text" name="username" class="form-control">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input id="input-box" type="password" name="password" class="form-control">
  </div>
  <div class="form-group">
    <button id="button" class="btn btn-success">Login</button>
    <a id="button" class="btn btn-primary" href="/signup">Register</a>
  </div>
</form>
